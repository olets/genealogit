# !/bin/bash

if [[ $# < 2 ]]; then
	printf "Every record must have at least ID and Name\\n"
	exit
fi

name="$1"
id="$2"
prefix="$3"
commit_message="$4"
ref=$(git rev-parse --abbrev-ref HEAD)
if [[ $ref == 'HEAD' ]]; then
	ref=$(git rev-parse HEAD)
fi

git checkout --quiet --orphan="$prefix$id"
git commit --no-gpg-sign --allow-empty --author="Genealogit <genealogit@olets.dev>" -m "$name

$commit_message"
git checkout --quiet $ref
